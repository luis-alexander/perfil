---
// Importa el componente de tarjeta de contacto
import { projects } from "../../config/projects.json";
---

<div class="py-10">
  <h2 class="text-5xl font-bold my-8 text-center">Portafolio</h2>
  <p class="text-xl my-8 text-center">Te presento algunos de mis proyectos!</p>
  <hr class="border-2 border-black w-1/3 m-auto mb-8" />
  <div class="flex flex-wrap justify-center gap-10">
    {
      projects.map((project) => (
        <div class="md:w-4/12 bg-black border border-gray-200 rounded-lg shadow-sm ">
          <a href={project.image} target="_blank">
            <img src={project.image} alt={project.title} class="rounded-lg cursor-pointer" />
          </a>
          <div class="p-5">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{project.title}</h5>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{project.description}</p>
            <h1 class="text-white font-bold">Tecnologias: </h1>
            <p class="text-gray-200">{project.tecnologias}</p>
            
          </div>
          <div class="text-center p-7">
            <a class="bg-gray-800 rounded-xl p-3 hover:bg-gray-600 text-white" href={project.link}>Visualizar</a>
          </div>
        </div>
      ))
    }
  </div>
</div>
